<?xml version="1.0"?>
 
<PropertyList>

 <fx>
 
  <crank>
   <name>crank</name>
   <mode>looped</mode>
   <path>Aircraft/FordT-flatbed/Sounds/start.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
    <not>
     <property>/engines/engine/running</property>
    </not>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </crank>

<!-- <property>/engines/engine/running</property> -->

<engine>
      <name>engineidle</name>
      <path>Aircraft/FordT-flatbed/Sounds/idle.wav</path>
      <mode>looped</mode>
       <condition>
       <less-than> 
          <property>/engines/engine/rpm</property>
          <value>1000.1</value>
        </less-than>
        <greater-than> 
          <property>/engines/engine/rpm</property>
          <value>450</value>
        </greater-than>
      </condition>
      <volume>
        <property>/engines/engine/rpm</property>
        <factor>0.0009</factor>
        <min>1.3</min>
        <max>5.25</max>
        <offset>0.001</offset>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.008</factor>
         <min>0.06</min>
	   <max>2.0</max>
         <offset>0.04</offset>
      </pitch>
      <reference-dist>180</reference-dist>
      <max-dist>500</max-dist>
    </engine>

   <engine>
      <name>engine</name>
      <path>Aircraft/FordT-flatbed/Sounds/vw1200rpm.wav</path>
      <mode>looped</mode>
      <volume>
        <property>/engines/engine/rpm</property>
        <factor>0.09</factor>
        <min>0.03</min>
        <max>1.0</max>
        <offset>0.01</offset>
      </volume>
      <pitch>
    <property>/engines/engine/rpm</property>
    <factor>0.0004</factor>
    <min>0.2</min>
    <max>2.0</max>
    <offset>0.15</offset>
   </pitch>
      <reference-dist>180</reference-dist>
      <max-dist>500</max-dist>
    </engine>

   <engine>
      <name>engine</name>
      <path>Aircraft/FordT-flatbed/Sounds/engine-whine.wav</path>
      <mode>looped</mode>
       <volume>
        <property>/engines/engine/rpm</property>
        <factor>0.09</factor>
        <min>0.03</min>
        <max>1.0</max>
        <offset>0.001</offset>
      </volume>
      <pitch>
       <property>/engines/engine/rpm</property>
       <factor>0.0004</factor>
       <min>0.5</min>
       <max>2.0</max>
       <offset>0.15</offset>
      </pitch>
      <reference-dist>180</reference-dist>
      <max-dist>200</max-dist>
    </engine>

  <gear>
   <name>gearclutch</name>
   <mode>once</mode>
   <path>Aircraft/FordT-flatbed/Sounds/clunk.wav</path>
   <condition>
     <property>/engines/engine/clutch</property>
     <value>1</value>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </gear>

  <rumble>
   <name>rumble</name>
   <mode>looped</mode>
   <path>Sounds/rumble.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
     <property>/gear/gear[3]/wow</property>
    </or>
    <!-- <property>/sim/current-view/internal</property> -->
   </condition>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <type>log</type>
    <factor>0.25</factor>
   </volume>
  </rumble>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
     <property>/gear/gear[3]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.5</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.01</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.05</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0025</factor>
    <offset>1.2</offset>
   </pitch>
  </squeal>
 
  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0035</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>

   <horn>
   <name>horn</name>
   <mode>looped</mode>
   <path>Aircraft/FordT-flatbed/Sounds/horn.wav</path>
   <property>/controls/horn/horn</property>
   <volume>
    <property>/orientation/alpha-deg</property>
    <type>log</type>
    <min>1.0</min>
    <max>1.5</max>
   </volume>
    <position>
     <x>1.17</x>
     <y>0.0</y>
     <z>0.13</z>
    </position>
    <reference-dist>100.0</reference-dist>
    <max-dist>500.0</max-dist>
  </horn>


</fx>
 
</PropertyList>
