<PropertyList>
  <path>Lights.ac</path>
  <nopreview/>

  <animation>
    <type>select</type>
    <object-name>light-volume</object-name>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <!--<object-name>white-light-plate</object-name>-->
    <object-name>blue-light-plate</object-name>
    <object-name>lnd-light-plate</object-name>
    <object-name>Cone</object-name>
    <object-name>Cone-texture</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <object-name>white-light-plate</object-name>
    <object-name>blue-light-plate</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <object-name>white-light-plate</object-name>
    <object-name>blue-light-plate</object-name>
    <spherical type="bool">true</spherical>
  </animation>

  <animation>
    <type>select</type>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <object-name>white-light-plate</object-name>
    <object-name>blue-light-plate</object-name>
    <condition>
      <and>
        <property>sim/multiplay/generic/int[13]</property>
        <greater-than>
          <property>sim/multiplay/generic/float[8]</property>
          <value>8</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <object-name>white-light-plate</object-name>
    <object-name>blue-light-plate</object-name>
    <emission>
      <red>   0.027 </red>
      <green> 0.027 </green>
      <blue>  0.027 </blue>
      <factor-prop>sim/multiplay/generic/float[7]</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>red-light-plate</object-name>
    <object-name>green-light-plate</object-name>
    <object-name>white-light-plate</object-name>
    <object-name>blue-light-plate</object-name>
    <interpolation>
      <entry><ind>    0 </ind><dep> 0.25 </dep></entry>
      <entry><ind>   20 </ind><dep> 0.50 </dep></entry>
      <entry><ind> 1500 </ind><dep> 5.00 </dep></entry>
    </interpolation>
  </animation>

</PropertyList>
